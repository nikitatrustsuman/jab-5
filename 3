#include <stdio.h>
#include <stdlib.h>
#include <time.h>  

int main() {
    int n;
    printf("Введіть кількість елементів у масиві: ");
    scanf("%d", &n);

    int a[n], positive_count = 0, min_abs_index = 0;
    long product = 1;

  
    srand(time(NULL));

    printf("Елементи масиву:\n");
    for(int i = 0; i < n; i++) {
        a[i] = (rand() % 201) - 100; 
        printf("%d ", a[i]);

        if(a[i] > 0) positive_count++;

        if(i == 0 || abs(a[i]) < abs(a[min_abs_index])) {
            min_abs_index = i;
        }
    }
    printf("\n");

    for(int i = 0; i < min_abs_index; i++) {
        product *= a[i];
    }

    printf("Кількість додатних елементів: %d\n", positive_count);
    printf("Добуток елементів до мінімального за модулем: %ld\n", product);

    return 0;
}
